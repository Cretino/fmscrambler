<Controls:MetroWindow x:Class="FMScrambler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:FMScrambler"
        mc:Ignorable="d"
        Title="YGO! FM Fusion Scrambler Tool" Height="371" Width="673" ResizeMode="NoResize" GlowBrush="Black" OverlayBrush="Black" Icon="simonico.png" Controls:ControlsHelper.ContentCharacterCasing="Upper">
    <Controls:MetroWindow.BorderBrush>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HotTrackColorKey}}"/>
    </Controls:MetroWindow.BorderBrush>
    <Grid UseLayoutRounding="False">
        <Label x:Name="lbl_copyleft" Content="Made by duke1102 - http://github.com/duke1102/fmscrambler" VerticalAlignment="Top" FontSize="11" HorizontalContentAlignment="Center" Margin="5,313,342,0"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="647" Background="#FF3CACDC" BorderBrush="#FF3CACDC" Foreground="{x:Null}">
            <TabItem Header="Fusions" BorderBrush="Black" Margin="3,-4,-32,4" Foreground="Black">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFE5E5E5">
                    <GroupBox x:Name="grp_file" Header="File Options" HorizontalAlignment="Left" Height="119" Margin="10,10,0,0" VerticalAlignment="Top" Width="621" Controls:ControlsHelper.HeaderFontSize="13" Controls:ControlsHelper.HeaderFontWeight="Medium">
                        <Grid HorizontalAlignment="Left" Height="79" VerticalAlignment="Top" Width="611" Margin="0,0,-2,0" UseLayoutRounding="False" >
                            <Button x:Name="btn_loadiso" Content="Load SLUS/MRG" Margin="10,10,455,34" Controls:ControlsHelper.ContentCharacterCasing="Upper" Controls:ButtonHelper.CornerRadius="8" Padding="0" FontSize="11" Click="btn_loadiso_Click" ToolTip="Load the SLUS_014.11 and WA_MRG.MRG. Will automatically try to load the WA_MRG.MRG if existing in the DATA folder."/>
                            <CheckBox x:Name="ch_illegal" Content="Allow ID 2 lower than ID 1" HorizontalAlignment="Center" Margin="334,8,7,0" Width="270" Unchecked="ch_illegal_Unchecked" Checked="ch_illegal_Checked" FontFamily="Segoe UI" FontSize="13" HorizontalContentAlignment="Center" VerticalAlignment="Top" ToolTip="Allows the Card ID of the second Fusion Material to be lower than the first Card ID."/>
                            <Label x:Name="lbl_pathdesc" Content="Path:" HorizontalAlignment="Left" Margin="9,50,0,0" VerticalAlignment="Top" Width="37"/>
                            <Label x:Name="lbl_path" Content="None specified." HorizontalAlignment="Left" Margin="51,50,0,0" VerticalAlignment="Top" Width="528"/>
                            <CheckBox x:Name="ch_glitch" Content="&quot;000&quot; Glitch Fusions" HorizontalAlignment="Center" Margin="334,31,7,0" Width="270" Checked="ch_glitch_Checked" Unchecked="ch_glitch_Unchecked" FontFamily="Segoe UI" FontSize="13" HorizontalContentAlignment="Center" VerticalAlignment="Top" ToolTip="Allow glitchy fusions with an ID over 722."/>
                            <Button x:Name="btn_patchiso" Content="Patch ISO" Margin="161,11,304,33" Controls:ControlsHelper.ContentCharacterCasing="Upper" Controls:ButtonHelper.CornerRadius="8" Padding="0" FontSize="11" ToolTip="Patch an image of the game with the scrambled fusions. (Can be iso, bin, img, etc.)" Click="btn_patchiso_Click" IsEnabled="False"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="grp_rando" Header="Seed Options" HorizontalAlignment="Left" Height="115" Margin="10,134,0,0" VerticalAlignment="Top" Width="299" Controls:ControlsHelper.HeaderFontWeight="Medium" Controls:ControlsHelper.HeaderMargin="0" Controls:ControlsHelper.HeaderFontSize="13">
                        <Grid Margin="0,0,-2,3">
                            <TextBox x:Name="txt_seed" MaxLength="9" TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Center" Margin="2,8,8,36" VerticalContentAlignment="Center" Controls:TextBoxHelper.WatermarkAlignment="Justify" PreviewTextInput="NumberValidationTextBox" Loaded="txt_seed_Loaded" ToolTip="Seed"/>
                            <Button x:Name="button" Content="Generate Random" Height="26" VerticalAlignment="Top" Margin="2,46,8,0" Controls:ButtonHelper.CornerRadius="8" FontSize="11" FontWeight="Bold" Padding="0" Click="button_Click" ToolTip="Generate a random Seed."/>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="grp_action" Header="Action" HorizontalAlignment="Left" Height="115" Margin="314,134,0,0" VerticalAlignment="Top" Width="317" Background="#CC119EDA" Controls:ControlsHelper.HeaderFontSize="13" Controls:ControlsHelper.HeaderFontWeight="Medium">
                        <Grid Margin="0,0,-2,-2">
                            <Button x:Name="btn_perform" Content="Randomize!" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Width="287" Height="26" FontWeight="Bold" Controls:ButtonHelper.CornerRadius="8" Padding="0" FontSize="12" Click="btn_perform_Click" IsEnabled="False" ToolTip="Start the scrambling process."/>
                            <Label x:Name="lbl_statusdesc" Content="Status:" HorizontalAlignment="Left" Margin="10,46,0,7" VerticalAlignment="Center" Width="46" Height="24" VerticalContentAlignment="Center" Padding="0"/>
                            <Label x:Name="lbl_status" Content="Waiting." HorizontalAlignment="Left" Margin="61,47,0,8" VerticalAlignment="Center" Width="236" Height="22" Padding="0" VerticalContentAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Credits / Help" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="182" Margin="35,-4,-35,0">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#FFE5E5E5" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFE5E5E5">
                    <TextBlock x:Name="txtb_credits" HorizontalAlignment="Left" Height="235" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="621" TextAlignment="Center" LineHeight="10" FontSize="11"><Run Text="This tool was created by "/><Run FontWeight="Bold" Text="duke1102 "/><Run Text="for the Playstation game &quot;Yu-Gi-Oh! Forbidden Memories&quot; (NTSC, USA version)."/><LineBreak/><Run Text="This software is licensed under an "/><Run FontWeight="Bold" Text="MIT license"/><Run Text=", you can find a copy in the folder of the tool under "/><Run FontWeight="Bold" Text="&quot;LICENSE&quot;"/><Run Text="."/><LineBreak/><Run/><LineBreak/><Run FontSize="10" Text="Credits to "/><Run FontWeight="Bold" FontSize="10" Text="Neto Rpg "/><Run FontSize="10" Text="and "/><Run FontWeight="Bold" FontSize="10" Text="RyuuzakiL5"/><Run FontSize="10" Text=" for their "/><Run FontWeight="Bold" FontSize="10" Text="FM Tool ALPHA"/><Run FontSize="10" Text=", "/><LineBreak/><Run FontSize="10" Text="which helped me out a whole lot with reading/manipulating the game files."/><LineBreak/><Run FontSize="10" Text="Show them some love!"/><LineBreak/><Run FontSize="10"/><LineBreak/><Run FontSize="10" Text="You can find precompiled binaries and the source code of this tool at Github."/><LineBreak/><Run FontWeight="Bold" FontStyle="Italic" FontSize="10" Text="http://github.com/duke1102/fmscrambler"/><LineBreak/><Run FontSize="10"/><LineBreak/><Run FontSize="10" Text="Feel free to comment, leave feedback, bug reports, fork or contribute!"/><LineBreak/><Run FontSize="10"/><LineBreak/><Run FontSize="10"/><LineBreak/><Run FontSize="10" Text="Special thanks to the Yu-Gi-Oh! Forbidden Memories Speedrun Community, especially the Discord Server. "/><Run FontWeight="Bold" FontSize="10" Text="You guys are awesome!"/><LineBreak/><Run FontWeight="Bold" FontSize="10"/><LineBreak/><Run FontWeight="Bold" FontSize="10" Text="Thanks for feedback/playtesting goes to Totozigemm, GenericMadScientist, Xer_91 and gfc_marcus."/></TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
        <Label x:Name="lbl_copyleft_Copy" Content="EXPECT BUGS! Version 0.1 ALPHA" VerticalAlignment="Top" FontSize="11" HorizontalContentAlignment="Center" Margin="0,313,10,0" HorizontalAlignment="Right" Width="196"/>

    </Grid>
</Controls:MetroWindow>
