                            <Label Content="Max. ATK" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="184,17,0,0" Width="120" Padding="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="3"/>
