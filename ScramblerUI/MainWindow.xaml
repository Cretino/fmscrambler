                            <CheckBox x:Name="chk_randomfusions" Content="Randomize Fusions" HorizontalAlignment="Left" Margin="210,92,0,0" VerticalAlignment="Top" IsChecked="{Binding CheckboxRandomFusions, FallbackValue=True, Mode=TwoWay}"/>
