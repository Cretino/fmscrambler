                                    <Controls:NumericUpDown x:Name="txt_maxDropRate" HorizontalAlignment="Left" Margin="251,30,0,0" VerticalAlignment="Top" Width="120" Maximum="2048" Minimum="1" NumericInputMode="Numbers" SnapToMultipleOfInterval="True" Value="{Binding TextboxMaxDropRate, Mode=TwoWay}"/>
